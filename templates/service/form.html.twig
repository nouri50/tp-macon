{% extends 'base.html.twig' %}

{% block title %}
    {{ editmode ? 'Modifier un service' : 'Ajouter un service' }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2>{{ editmode ? 'Modifier un service' : 'Ajouter un service' }}</h2>

        {# âœ… enctype obligatoire pour l'envoi d'image #}
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="mb-3">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.imageFile) }}
        </div>
       
        {% if form.imageFile.vars.errors|length %}
    <div class="text-danger">
        {% for error in form.imageFile.vars.errors %}
            {{ error.message }}
        {% endfor %}
    </div>
{% endif %}


        <button type="submit" class="btn btn-primary">
            {{ editmode ? 'Modifier' : 'Ajouter' }}
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
